# Server Configuration
PORT=3344
HOST=0.0.0.0

# Printer Configuration
# Printer type: usb (recommended with morden-node-escpos)
# Note: Network printer support coming soon
PRINTER_TYPE=usb

# USB Printer Configuration (for PRINTER_TYPE=usb)
# Leave empty for auto-detect first available printer
# Or specify vendor and product ID (from lsusb command)
# Example: USB_VENDOR_ID=04b8 (Epson)
USB_VENDOR_ID=
USB_PRODUCT_ID=

# Network Printer Configuration (for PRINTER_TYPE=network)
# Note: Network support not yet available with morden-node-escpos
NETWORK_PRINTER_IP=192.168.1.100
NETWORK_PRINTER_PORT=9100

# Serial Printer Configuration (for PRINTER_TYPE=serial)
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUDRATE=9600

# Receipt Configuration
STORE_NAME=XiPOS Store
STORE_ADDRESS=123 Main Street
STORE_PHONE=+1234567890
STORE_TAX_ID=TX123456

# Paper width in characters (default: 32 for 58mm, 48 for 80mm)
PAPER_WIDTH=48

# Enable debug logging
DEBUG=false

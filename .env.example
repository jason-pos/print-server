# Server Configuration
PORT=3344
HOST=0.0.0.0

# Printer Configuration
# Only USB printers are supported
# Network, Bluetooth, and Serial printers are not supported
PRINTER_TYPE=usb

# USB Printer Configuration
# Leave empty for auto-detect first available printer
# Or specify vendor and product ID (from lsusb command)
# Example: USB_VENDOR_ID=04b8 (Epson)
USB_VENDOR_ID=
USB_PRODUCT_ID=

# Receipt Configuration
STORE_NAME=XiPOS Store
STORE_ADDRESS=123 Main Street
STORE_PHONE=+1234567890
STORE_TAX_ID=TX123456

# Paper width in characters (default: 32 for 58mm, 48 for 80mm)
PAPER_WIDTH=48

# Enable debug logging
DEBUG=false

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5183,http://localhost:5173

# API Authentication (REQUIRED - server will not start without a valid API key)
# Generate a strong key: openssl rand -hex 32
API_KEY=your-api-key-here

# Rate Limiting Configuration
# Rate limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000
# Maximum requests for /print endpoint per window (default: 10)
RATE_LIMIT_PRINT_MAX=10
# Maximum requests for /test and /test-receipt endpoints per window (default: 3)
RATE_LIMIT_TEST_MAX=3

# Currency symbol for receipts (default: RM)
CURRENCY_SYMBOL=RM

# Printer encoding (default: GB18030)
PRINTER_ENCODING=GB18030

# Receipt footer messages
RECEIPT_FOOTER_LINE1=Thank you for your purchase!
RECEIPT_FOOTER_LINE2=Please come again
